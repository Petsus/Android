<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/margin_default_x0.5"
    android:background="@drawable/bg_button_ripple"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_address"
        style="@style/AppTheme.Petsus.Text.H1"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:tint="@color/md_theme_onBackground"
        app:srcCompat="@drawable/icon_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address_title"
        style="@style/AppTheme.Petsus.Text.H2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_x0.5"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        tools:text="Title"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/address_subtitle"
        style="@style/AppTheme.Petsus.Text.H3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_x0.5"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        tools:text="Subtitle"
        android:layout_marginTop="@dimen/margin_default_x0.25"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toBottomOf="@id/address_title"
        app:layout_constraintEnd_toEndOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>