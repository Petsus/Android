<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/padding_default">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_simple_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="@style/AppTheme.Petsus.Text.H2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitle_simple_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_h3"
        android:textAppearance="@style/AppTheme.Petsus.Text.H3" />

</androidx.appcompat.widget.LinearLayoutCompat>