<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin_default_x0.5"
    android:clickable="true"
    android:background="@drawable/bg_button_ripple"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notification_title"
        style="@style/AppTheme.Petsus.Text.H2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_x0.5"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        tools:text="Title"
        android:textSize="@dimen/text_h1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notification_subtitle"
        style="@style/AppTheme.Petsus.Text.H3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_x0.5"
        android:minLines="1"
        tools:text="Subtitle"
        android:layout_marginTop="@dimen/margin_default_x0.25"
        android:textSize="@dimen/text_h2"
        app:layout_constraintStart_toEndOf="@id/icon_address"
        app:layout_constraintTop_toBottomOf="@id/address_title"
        app:layout_constraintEnd_toEndOf="parent"  />

</androidx.appcompat.widget.LinearLayoutCompat>